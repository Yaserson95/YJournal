        <li><b>@Html.DisplayNameFor(model => model.Birth):</b>  @Html.DisplayFor(model => model.Birth)</li>
        <li><b>@Html.DisplayNameFor(model => model.UserId):</b>  @Html.DisplayFor(model => model.UserId)</li>
