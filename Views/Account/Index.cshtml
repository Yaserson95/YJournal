@model YJournal.Models.UserAccount

@{
    ViewBag.Title = "Аккаунт";
}

    <h2>Аккаунт</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Firstname) @Html.DisplayFor(model => model.Surname)</h4>
    <p>@Html.DisplayFor(model => model.Post)</p>
    <hr />
    <ul style="float:left">
        <li><b>@Html.DisplayNameFor(model => model.Email):</b>  @Html.DisplayFor(model => model.Email)</li>
